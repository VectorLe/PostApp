<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New post</div>
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="post[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="post[body]"></textarea>
        </div>
        <input class="ui green big basic button" type="submit" value="Submit">
    </form>
</div>

<% include ./partials/footer %>