<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Post</div>
    <form class="ui form" action="/posts/<%=post._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= post.title %>" name="post[title]">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" value="<%= post.image %>" name="post[image]">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="post[body]"><%= post.body %></textarea>
        </div>
        <button class="ui big violet basic button">Update Post</button>
    </form>
</div>
<% include partials/footer %>